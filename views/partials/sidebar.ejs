<aside class="dashboard-sidebar">
    <div class="sidebar-header">
        <h3><i class="fas fa-user-cog"></i> My Account</h3>
        <button class="sidebar-close-btn" aria-label="Close sidebar">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <nav class="sidebar-nav">
        <div class="nav-section">
            <h4>Dashboard</h4>
            <ul class="nav-list">
                <li class="nav-item <%= activePage === 'dashboard' ? 'active' : '' %>">
                    <a href="/dashboard" class="nav-link-sidebar">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Account Overview</span>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'orders' ? 'active' : '' %>">
                    <a href="/my-orders" class="nav-link-sidebar">
                        <i class="fas fa-shopping-bag"></i>
                        <span>My Orders</span>
                        <span class="nav-badge"><%= typeof ordersCount !== 'undefined' ? ordersCount : '' %></span>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'address-book' ? 'active' : '' %>">
                    <a href="/address-book" class="nav-link-sidebar">
                        <i class="fas fa-address-book"></i>
                        <span>Address Book</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="nav-section">
            <h4>Settings</h4>
            <ul class="nav-list">
                <li class="nav-item <%= activePage === 'settings' ? 'active' : '' %>">
                    <a href="/settings" class="nav-link-sidebar">
                        <i class="fas fa-cog"></i>
                        <span>Account Settings</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="sidebar-footer">
        <button type="button" class="logout-btn" onclick="logoutFromDashboard()">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
        </button>
    </div>
</aside>
