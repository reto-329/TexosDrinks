<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Texos Drinks:: Home</title>
    <link rel="stylesheet" href="/css/header-responsive.css">
    <meta name="description" content="Discover premium artisanal beverages crafted with care and delivered fresh to your doorstep. Shop our collection of energy drinks, sodas, juices, and more.">
    <link rel="stylesheet" href="css/common.css">
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="css/header2.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="Images/logo1.png" sizes="256x256">
</head>
<body>
    <%- include('partials/headerSelector', { user: user || null }) %>
    <script src="/scripts/addToCart.js"></script>
    <script src="/scripts/cartNotification.js"></script>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h1 class="hero-title">
                        TEXOS<span class="hero-accent">DRINKS</span>           
                    </h1>
                    <p class="hero-description">
                        Discover our collection of drinks crafted with the finest ingredients and delivered straight to your doorstep. Experience the perfect blend of taste, quality, and convenience.
                    </p>
                    <div class="hero-buttons">
                        <a href="/product" class="hero-btn primary" aria-label="Shop Now">
                            <i class="fas fa-shopping-cart"></i>
                            Shop Now
                        </a>    
                    </div>
                </div>
            </div>
        </section>

        <!-- Product Grid Section -->
        <section class="products-section" id="products">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">
                        OUR <span class="title-accent">COLLECTION</span>
                    </h2>
                    <p class="section-subtitle">
                        Discover our premium selection of beverages, each crafted with passion and precision to deliver an unforgettable taste experience.
                    </p>
                </div>
                <div class="products-grid" id="productsGrid">
                    <% if (latestProducts && latestProducts.length > 0) { %>
                        <% latestProducts.forEach(function(product) { %>
                            <div class="product-card">
                                <div class="product-image-container">
                                    <img src="<%= product.image_url %>" alt="<%= product.name %>" class="product-image">
                                    <% if (product.is_new) { %>
                                        <div class="product-badge">NEW</div>
                                    <% } %>
                                    <div class="product-overlay"></div>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name"><%= product.name %></h3>
                                    <div class="product-rating">
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star-half-alt" aria-hidden="true"></i>
                                        <span class="sr-only">4.5 out of 5 stars</span>
                                    </div>
                                    <p class="product-description"><%= product.description.length > 100 ? product.description.substring(0, 100) + '...' : product.description %></p>
                                    <div class="product-price">â‚¦<%= Number(product.price).toLocaleString('en-NG', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
                                </div>
                                <div class="product-actions">
                                    <div class="product-card" data-product-id="<%= product.id %>" data-product-name="<%= product.name %>" data-product-price="<%= product.price %>" data-product-image="<%= product.image_url %>" data-product-stock="<%= product.stock_quantity || 100 %>">
                                        <button class="add-to-cart-btn">
                                            <i class="fas fa-shopping-cart" aria-hidden="true"></i>
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-products">
                            <p>No products available at the moment.</p>
                        </div>
                    <% } %>
                </div>
                <div class="section-footer">
                    <a href="/product" class="view-all-btn">
                        View All Products 
                        <i class="fas fa-arrow-right" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </section>

        <!-- Newsletter Section -->
        <section class="newsletter" id="newsletter">
            <div class="container">
                <div class="newsletter-content">
                    <h2>Stay Updated with TexosDrinks</h2>
                    <p>Subscribe to our newsletter and be the first to know about new products, exclusive offers, and special promotions.</p>
                    <form class="newsletter-form" id="newsletterForm">
                        <input 
                            type="email" 
                            placeholder="Enter your email address" 
                            required 
                            aria-label="Email address for newsletter"
                            id="newsletterEmail"
                        >
                        <button type="submit">Subscribe</button>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <meta name="user-logged-in" content="<%= user ? 'true' : 'false' %>">
</body>
</html>
