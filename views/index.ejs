<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Texos Drinks:: Home</title>
    <link rel="stylesheet" href="/css/header-responsive.css">
    <meta name="description" content="Discover premium artisanal beverages crafted with care and delivered fresh to your doorstep. Shop our collection of energy drinks, sodas, juices, and more.">
    <link rel="stylesheet" href="css/common.css">
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="css/header2.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="Images/logo1.png" sizes="256x256">
</head>
<body>
    <%- include('partials/headerSelector', { user: user || null }) %>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h1 class="hero-title">
                        TEXOS<span class="hero-accent">DRINKS</span>           
                    </h1>
                    <p class="hero-description">
                        Discover our collection of drinks crafted with the finest ingredients and delivered straight to your doorstep. Experience the perfect blend of taste, quality, and convenience.
                    </p>
                    <div class="hero-buttons">
                        <a href="/product" class="hero-btn primary" aria-label="Shop Now">
                            <i class="fas fa-shopping-cart"></i>
                            Shop Now
                        </a>    
                    </div>
                </div>
            </div>
        </section>

        <!-- Product Grid Section -->
        <section class="products-section" id="products">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">
                        OUR <span class="title-accent">COLLECTION</span>
                    </h2>
                    <p class="section-subtitle">
                        Discover our premium selection of beverages, each crafted with passion and precision to deliver an unforgettable taste experience.
                    </p>
                </div>
                <div class="products-grid" id="productsGrid">
                    <% if (latestProducts && latestProducts.length > 0) { %>
                        <% latestProducts.forEach(function(product) { %>
                            <div class="product-card">
                                <div class="product-image-container">
                                    <img src="<%= product.image_url %>" alt="<%= product.name %>" class="product-image">
                                    <% if (product.is_new) { %>
                                        <div class="product-badge">NEW</div>
                                    <% } %>
                                    <div class="product-overlay"></div>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name"><%= product.name %></h3>
                                    <div class="product-rating">
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                        <i class="fas fa-star-half-alt" aria-hidden="true"></i>
                                        <span class="sr-only">4.5 out of 5 stars</span>
                                    </div>
                                    <p class="product-description"><%= product.description.length > 100 ? product.description.substring(0, 100) + '...' : product.description %></p>
                                    <div class="product-price">â‚¦<%= Number(product.price).toLocaleString('en-NG', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
                                </div>
                                <div class="product-actions">
                                    <button class="add-to-cart-btn" data-product-id="<%= product.id %>">
                                        <i class="fas fa-shopping-cart" aria-hidden="true"></i>
                                        Add to Cart
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-products">
                            <p>No products available at the moment.</p>
                        </div>
                    <% } %>
                </div>
                <div class="section-footer">
                    <a href="/product" class="view-all-btn">
                        View All Products 
                        <i class="fas fa-arrow-right" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </section>

        <!-- Newsletter Section -->
        <section class="newsletter" id="newsletter">
            <div class="container">
                <div class="newsletter-content">
                    <h2>Stay Updated with TexosDrinks</h2>
                    <p>Subscribe to our newsletter and be the first to know about new products, exclusive offers, and special promotions.</p>
                    <form class="newsletter-form" id="newsletterForm">
                        <input 
                            type="email" 
                            placeholder="Enter your email address" 
                            required 
                            aria-label="Email address for newsletter"
                            id="newsletterEmail"
                        >
                        <button type="submit">Subscribe</button>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add to cart functionality
            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
            
            // Success message element
            let successMsg = document.createElement('div');
            successMsg.id = 'cart-success-message';
            successMsg.style.display = 'none';
            successMsg.style.position = 'fixed';
            successMsg.style.top = '30px';
            successMsg.style.right = '30px';
            successMsg.style.background = '#28a745';
            successMsg.style.color = '#fff';
            successMsg.style.padding = '16px 28px';
            successMsg.style.borderRadius = '8px';
            successMsg.style.boxShadow = '0 2px 8px rgba(0,0,0,0.15)';
            successMsg.style.zIndex = '9999';
            successMsg.style.fontWeight = '600';
            successMsg.innerText = 'Product added to cart!';
            document.body.appendChild(successMsg);
            
            function showSuccessMessage() {
                successMsg.style.display = 'block';
                setTimeout(() => {
                    successMsg.style.display = 'none';
                }, 2000);
            }
            
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    addToCart(productId, 1);
                });
            });
            
            function addToCart(productId, quantity) {
                // Check if user is logged in
                const isLoggedIn = "<%= user ? 'true' : 'false' %>";
                
                if (isLoggedIn === "true") {
                    // User is logged in, use the API
                    fetch('/api/cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ product_id: productId, quantity })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showSuccessMessage();
                            // Update cart count if needed
                            if (window.updateLoggedInCartCount) {
                                window.updateLoggedInCartCount();
                            } else if (window.updateCartCount) {
                                window.updateCartCount();
                            }
                        } else {
                            alert(data.error || 'Failed to add product to cart');
                        }
                    })
                    .catch(error => {
                        console.error('Error adding to cart:', error);
                        alert('Error adding product to cart');
                    });
                } else {
                    // User is not logged in, redirect to login page
                    window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                }
            }
        });
    </script>
</body>
</html>
