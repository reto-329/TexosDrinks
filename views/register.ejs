<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Texos Drinks:: Register</title>
    <link rel="stylesheet" href="/css/header-responsive.css">
    <link rel="stylesheet" href="css/register.css">
    <link rel="stylesheet" href="css/login.css">
    <link rel="stylesheet" href="css/common.css">
    <link rel="stylesheet" href="css/header2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="Images/logo1.png" sizes="256x256">
</head>
<body>
    <%- include('partials/headerSelector', { user: user || null }) %>
    <main class="auth-page">
        <div class="auth-container">
            <div class="auth-header">
                <h1 class="auth-title">
                    JOIN <span class="auth-title-accent"><span class="join-yellow">TEXOS</span>DRINKS</span>
                </h1>
                <p class="auth-description">Create your account to start shopping</p>
            </div>

            <div class="auth-card">
                <div class="auth-card-header">
                    <h2 class="auth-card-title"> 
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                            <circle cx="8.5" cy="7" r="4"/>
                            <line x1="20" y1="8" x2="20" y2="14"/>
                            <line x1="23" y1="11" x2="17" y2="11"/>
                        </svg>
                        Create Account
                    </h2>
                </div>
                <div class="auth-card-content">
                    <!-- <div class="alert alert-error" id="errorAlert"></div> -->

                    <form class="register-form" action="/api/users/register" method="POST" id="registerForm">
                        <div class="form-group floating-label-group">
                            <input type="text" id="name" class="form-input" name="username" placeholder=" " required/>
                            <label for="name" class="floating-label">Username</label>
                        </div>

                        <div class="form-group floating-label-group">
                            <input type="email" id="email" class="form-input" name="email" placeholder=" " required/>
                            <label for="email" class="floating-label">Email Address</label>
                        </div>

                        <div class="form-group floating-label-group">
                            <input type="tel" id="phone" class="form-input" name="phonenumber" placeholder=" " required/>
                            <label for="phone" class="floating-label">Phone Number</label>
                        </div>

                        <div class="form-group password-floating-label-group">
                            <div class="password-input-container">
                                <input type="password" id="password" class="form-input" name="password" placeholder=" " required/>
                                <label for="password" class="password-floating-label">Password</label>
                                <!-- Show password toggle will be injected by JS -->
                            </div>
                        </div>

                        <div class="form-group password-floating-label-group">
                            <div class="password-input-container">
                                <input type="password" id="confirmPassword" class="form-input" name="confirmPassword" placeholder=" " required/>
                                <label for="confirmPassword" class="password-floating-label">Confirm Password</label>
                                <!-- Show password toggle will be injected by JS -->
                            </div>
                        </div>

                        <button type="submit" class="auth-submit-btn" id="submitBtn">
                            Create Account
                        </button>

                        <div class="auth-footer">
                            <p>
                                Already have an account?
                                <a href="/login" class="auth-footer-link">Sign In</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>

    <script src="scripts/common.js"></script>
    <script src="scripts/show-password.js"></script>
    <script src="scripts/register.js"></script>
   </body>
</html>
