<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Texos Drinks - Address Book</title>
    <link rel="stylesheet" href="/css/header-responsive.css">
    <link rel="stylesheet" href="/css/address-book.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/header2.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="/Images/logo1.png" sizes="256x256">
    <script src="/scripts/sidebar.js" defer></script>
</head>
<body style="background-color: #f8f9fa;">
    <%- include('partials/headerSelector', { user: user || null }) %>
    <div class="address-footer-space"></div>
    <main class="dashboard-main">
        <div class="dashboard-container">
            <div class="container">
                <div class="dashboard-layout">
                    <%- include('partials/sidebar', { activePage: 'address-book', user: user, ordersCount: addresses ? addresses.length : 0 }) %>
                    <section class="dashboard-content">
                        <div class="address-section">
                            <h2 class="section-title">
                                ADDRESS BOOK 
                                <span class="count">(<%= addresses ? addresses.length : 0 %>)</span>
                                <subtitle style="font-size: 10px;">--Only 5 Address can be added</subtitle>
                            </h2>

                            <div class="address-list">
                                <% if (addresses && addresses.length > 0) { %>
                                    <% addresses.forEach(function(address, idx) { %>
                                        <div class="address-item" data-id="<%= address.id %>">
                                            <div class="address-content">
                                                <div class="address-name"><%= address.first_name || 'Customer' %> <%= address.last_name || '' %></div>
                                                <div class="address-details">
                                                    <%= address.street %><% if (address.additional_info) { %>, <%= address.additional_info %><% } %> - <%= address.city %>
                                                </div>
                                                <div class="address-phone">+234 <%= address.phone %></div>
                                                <% if (address.is_default) { %>
                                                    <div class="default-label">DEFAULT ADDRESS</div>
                                                <% } %>
                                            </div>
                                            <div class="address-actions">
                                                <button class="edit-link" onclick="editAddress('<%= address.id %>')" title="Edit address">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="delete-link" onclick="showDeleteModal('<%= address.id %>')" title="Delete address">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                                <% if (!address.is_default) { %>
                                                    <button class="star-btn" onclick="setDefaultAddress('<%= address.id %>')" data-id="<%= address.id %>" title="Set as default">
                                                        <i class="far fa-star"></i>
                                                    </button>
                                                <% } else { %>
                                                    <button class="star-btn default" disabled title="Default address">
                                                        <i class="fas fa-star"></i>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="empty-addresses">
                                        <p>No addresses found. Add your first address below.</p>
                                    </div>
                                <% } %>
                            </div>

                            <button class="add-address-btn" onclick="showAddAddressModal()" style="display: block; margin: 1rem auto; background-color: #dc2626;">
                                <i class="fas fa-plus"></i>
                                Add address
                            </button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>

    <div class="address-footer-space"></div>

    <%- include('partials/footer') %>

    <!-- Add/Edit Address Modal -->
    <div class="modal-overlay" id="addressModal">
        <div class="modal">
            <div class="modal-header">
                <div class="step-indicator">
                    <i class="fas fa-check-circle"></i>
                    <span>CUSTOMER ADDRESS</span>
                </div>
            </div>

            <div class="modal-body">
                <h3 class="modal-title">ADD NEW ADDRESS</h3>
                
                <form id="addressForm">
                    <input type="hidden" name="address_id" id="address_id">
                    <div class="form-row">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" name="first_name" id="first_name" placeholder="First Name" required>
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" name="last_name" id="last_name" placeholder="Last Name" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Phone Number</label>
                            <div class="phone-input-container">
                                <div class="phone-input">
                                    <span class="prefix">+234</span>
                                    <input type="tel" name="phone" id="phone" placeholder="e.g., 08012345678" 
                                           required pattern="0[0-9]{10}" 
                                           title="11-digit Nigerian number starting with 0">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Additional Phone Number</label>
                            <div class="phone-input-container">
                                <div class="phone-input">
                                    <span class="prefix">+234</span>
                                    <input type="tel" name="additional_phone" id="additional_phone" 
                                           placeholder="e.g., 08012345678" 
                                           pattern="0[0-9]{10}" 
                                           title="11-digit Nigerian number starting with 0">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Delivery Address</label>
                        <input type="text" name="street" id="street" placeholder="Enter your Address" required>
                    </div>

                    <div class="form-group">
                        <label>Additional Information</label>
                        <input type="text" name="additional_info" id="additional_info" placeholder="Enter Additional Information">
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>State/Region</label>
                            <input type="text" name="state" id="state" placeholder="Enter your State or Region" required>
                        </div>
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" name="city" id="city" placeholder="Enter your City" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Country</label>
                            <input type="text" name="country" id="country" placeholder="Enter your Country" required>
                        </div>
                        <div class="form-group">
                            <label>Zip Code</label>
                            <input type="text" name="zip" id="zip" placeholder="Enter your Zip Code" required>
                        </div>
                    </div>
                    
                    <input type="hidden" name="is_default" id="is_default" value="false">
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn-cancel" type="button" onclick="hideAddressModal()">Cancel</button>
                <button class="btn-save" type="button" id="saveAddressBtn" onclick="saveAddress()">Save Address</button>
            </div>
        </div>
    </div>

    <!-- Delete Address Modal -->
    <div class="modal-overlay" id="deleteModal">
        <input type="hidden" id="delete_address_id">
        <div class="modal">
            <div class="modal-header">
                <div class="step-indicator">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>DELETE ADDRESS</span>
                </div>
            </div>

            <div class="modal-body">
                <h3 class="modal-title">DELETE ADDRESS</h3>
                <p>Are you sure you want to delete this address?</p>
            </div>

            <div class="modal-footer">
                <button class="btn-cancel" type="button" onclick="hideDeleteModal()">Cancel</button>
                <button class="btn-delete" type="button" onclick="confirmDelete()">Delete Address</button>
            </div>
        </div>
    </div>

    <script src="/scripts/address-book.js"></script>
</body>
</html>